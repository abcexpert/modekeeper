{
  "schema_version": "passport.v0",
  "name": "comm",
  "description": "Communication-sensitive profile: conservative defaults with explicit comm telemetry gate.",
  "allowed_chords": [
    "NORMAL-HOLD",
    "DRIFT-RETUNE",
    "BURST-ABSORB",
    "RECOVER",
    "RELOCK"
  ],
  "allowed_actuators": {
    "hot": [
      "concurrency"
    ],
    "cold": [
      "grad_accum_steps",
      "microbatch_size",
      "comm_bucket_mb"
    ]
  },
  "limits": {
    "cooldown_s": 90,
    "max_delta_per_step": 1,
    "relock_stable_intervals": 3,
    "knob_limits": {
      "comm_bucket_mb": {"min": 32, "max": 256},
      "grad_accum_steps": {"min": 1, "max": 16},
      "microbatch_size": {"min": 8, "max": 128}
    }
  },
  "invariants": [
    "keep_global_batch_stable",
    "comm_changes_require_telemetry"
  ],
  "cooldowns": {
    "comm_adjust_s": 120,
    "recover_s": 180
  },
  "gates": {
    "default_mode": "plan_verify_only",
    "apply": false,
    "require_verify_ok": true,
    "require_comm_telemetry": true,
    "require_kill_switch_off": true
  }
}
